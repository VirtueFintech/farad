{% extends './contrib' %}

{% block head %}
{% endblock %}
  
{% block country %}
  {{ antl.formatMessage('contrib.paypal.title') }}
{% endblock %}

{% block ethereum %}
  <section id="warn" class="dark-bg ptb ptb-sm-80" >
    <div class="container">
      <div class="row">
        <div class="col-md-8 offset-md-2 text-center">
          <h3>{{ antl.formatMessage('contrib.paypal.title') }}</h3>
        </div>
      </div>
      <div class="spacer-75"></div>
      <div class="row">
        <div class="col-md-6 offset-md-3">

<H2>We regret to inform that effective from 24th October 2017, 16:00 Singapore/HK time,  we will no longer be accepting Paypal as a form of payment to purchase FRD. We apologize for any inconveniences caused. Thank You.</H2>
        </div>
      </div>
    </div>
  </section>
{% endblock %}

{% block script %}
  <script type="text/javascript">
    var unit_price = 125.00;
    $(document).ready(function() {
      $('#usd_val').change(function() {
        var usd = '';
        console.log('usd = ' + usd);
        $('#usd_val option:selected').each(function() {
          usd = $(this).val();
        })
        // TODO: Change to this for TS1.
        var frd = (usd / 0.125);
        $('#frd_amt').val(frd.toLocaleString('en'));

        var qnty = (usd / unit_price);
        $('#quantity').val(qnty);
      })
    });
  </script>
{% endblock %}


