{% extends './contrib' %}

{% block head %}
{% endblock %}
  
{% block country %}
  {{ antl.formatMessage('contrib.paypal.title') }}
{% endblock %}

{% block ethereum %}
  <section id="warn" class="dark-bg ptb ptb-sm-80" >
    <div class="container">
      <div class="row">
        <div class="col-md-8 offset-md-2 text-center">
          <h3>{{ antl.formatMessage('contrib.paypal.title') }}</h3>
        </div>
      </div>
      <div class="spacer-75"></div>
      <div class="row">
        <div class="col-md-6 offset-md-3">

          <form id="contact" class="contact-form" role="form" action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
            <input type="hidden" name="currency_code" value="USD">
            <input type="hidden" name="cmd" value="_s-xclick">
            <input type="hidden" name="hosted_button_id" value="USGY546D6PGYU">
            <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_buynowCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!" style="display: none;">
            <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1" style="display: none;">

            <div class="form-field-wrapper form-group">
              <label style="color: #fff;">{{ antl.formatMessage('contrib.paypal.select') }}</label>
              <select id="usd_val" class="input-sm form-full" name="os0" required="required" aria-label="Payment Amount">
                <option value="125.00">USD 125.00</option>
                <option value="250.00">USD 250.00</option>
                <option value="500.00">USD 500.00</option>
                <option value="750.00">USD 750.00</option>
                <option value="1000.00">USD 1,000.00</option>
                <option value="1500.00">USD 1,500.00</option>
                <option value="2000.00">USD 2,000.00</option>
                <option value="2500.00">USD 2,500.00</option>
                <option value="3000.00">USD 3,000.00</option>
                <option value="3500.00">USD 3,500.00</option>
                <option value="4000.00">USD 4,000.00</option>
                <option value="4500.00">USD 4,500.00</option>
                <option value="5000.00">USD 5,000.00</option>
                <option value="5500.00">USD 5,500.00</option>
                <option value="6000.00">USD 6,000.00</option>
                <option value="6500.00">USD 6,500.00</option>
                <option value="7000.00">USD 7,000.00</option>
                <option value="7500.00">USD 7,500.00</option>
                <option value="8000.00">USD 8,000.00</option>
                <option value="8500.00">USD 8,500.00</option>
                <option value="9000.00">USD 9,000.00</option>
                <option value="9500.00">USD 9,500.00</option>
                <option value="10000">USD 10,000</option>
              </select>
            </div>
            <input type="hidden" id="quantity" name="quantity">
            <div class="form-field-wrapper input-group">
              <span class="input-group-addon" id="basic-addon1">FRD</span>
              <input type="text" name="frd_amt" id="frd_amt" class="form-control" aria-label="FRD" aria-describedby="frd-amount" readonly="true" value="862.069">
            </div>
            <div class="form-field-wrapper form-group">
              <label style="color: #fff;">{{ antl.formatMessage('contrib.paypal.eth.addr') }}</label>
              <input type="text" name="invoice" id="eth_addr" class="form-control" placeholder="{{ antl.formatMessage('contrib.paypal.eth.addr') }}" aria-label="ETH" aria-describedby="eth-addr" required="required">
            </div>
            <div class="form-field-wrapper form-group">
              <label style="color: #fff;">{{ antl.formatMessage('contrib.paypal.email.addr') }}</label>
              <input type="email" name="email" id="email" class="form-control" placeholder="{{ antl.formatMessage('contrib.paypal.email.addr') }}" aria-label="Email" aria-describedby="email-addr" required="required">
            </div>
            <button class="btn btn-md btn-blue form-full" type="submit" name="submit">{{ antl.formatMessage('contrib.paypal.title') }}</button>            
          </form>     
        </div>
      </div>
    </div>
  </section>
{% endblock %}

{% block script %}
  <script type="text/javascript">
    var unit_price = 145.00;
    $(document).ready(function() {
      $('#usd_val').change(function() {
        var usd = '';
        console.log('usd = ' + usd);
        $('#usd_val option:selected').each(function() {
          usd = $(this).val();
        })
        // TODO: Change to this for TS1.
        var frd = (usd / 0.145);
        $('#frd_amt').val(frd.toLocaleString('en'));

        var qnty = (usd / unit_price);
        $('#quantity').val(qnty);
      })
    });
  </script>
{% endblock %}


